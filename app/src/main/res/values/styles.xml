<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:spinnerItemStyle">@style/edit_style</item>
        <item name="alertDialogTheme">@style/WideDialog</item>

    </style>

    <style name="mySpinnerItemSelectedStyle" parent="Widget.AppCompat.DropDownItem.Spinner">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="backgroundTint">@color/colorWhite</item>
        <item name="backgroundColor">@color/colorWhite</item>
        <item name="android:textColorHint">@color/colorWhite</item>
        <item name="drawerArrowStyle">@color/colorWhite</item>
    </style>
    <style name="edit_style" >
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="WideDialog" parent="Base.Theme.AppCompat.Dialog">
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
    </style>

</resources>